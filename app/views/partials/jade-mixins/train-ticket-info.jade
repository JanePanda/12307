mixin order-train-info(train)
  p 2014-02-21（周五）
    | {{ #{train}['车次'] }} 次
    | {{ #{train}.travelDeparture['站名'] + '/' + #{train}.travelTerminal['站名'] }} 
    | {{ #{train}.travelDeparture['出发'] + ' ~ ' + #{train}.travelTerminal['到达'] }}



mixin order-train-remain-ticket-info(ticket, isSimple)
  p 
    each seateType in ['商务座', '特等座', '一等座', '二等座', '高级软卧', '软卧', '硬卧', '软座', '硬座', '无座', '其它']
      +ticket-info(ticket, seateType, isSimple)

mixin ticket-info(ticket, seateType, isSimple)
  if isSimple
    span.ticket-info(ng-if!="#{ticket}['#{seateType}'] > 0") #{seateType}: 
    span.red(ng-if!="#{ticket}['#{seateType}'] > 0") {{#{ticket}['#{seateType}']}}
  else
    span.ticket-info(ng-if!="#{ticket}['#{seateType}'] > 0")
      | #{seateType}（{{getTicketPrice('#{seateType}')}}元）: {{#{ticket}['#{seateType}']|showRemainTickets}}



